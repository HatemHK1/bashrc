colorscheme koehler

syntax on
set nocompatible
set backspace=2
set ruler

set showcmd
set showmatch
set autoindent

set foldenable
set foldmethod=marker

set incsearch
set hlsearch
set ignorecase
set smartcase

set expandtab
set shiftwidth=4
set smartindent
set softtabstop=4
set ts=4
set splitright

set cursorline
set relativenumber

